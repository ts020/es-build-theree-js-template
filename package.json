{
  "scripts": {
    "dev": "run-s clean dev:copy dev:ts dev:start watch",
    "dev:copy": "cpx \"./public/**/*.*\" ./dist",
    "dev:ts": "esbuild src/main.ts --bundle '--define:process.env.NODE_ENV=\"development\"' --outfile=dist/out.js",
    "dev:start": "http-server ./dist -p 8080 -c-1",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "esbuild": "^0.6.0",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "cpx": "^1.5.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2"
  }
}
